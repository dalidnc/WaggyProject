@model List<Testimonial>

<h1 class="text-center">Yorumlar</h1>

<section id="testimonial">
    <div class="container my-5 py-5">
        <div class="row">
            <div class="offset-md-1 col-md-10">
                <div class="swiper testimonial-swiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide">
                                <div class="row align-items-center">
                                    <div class="col-2 text-center">
                                        <iconify-icon icon="ri:double-quotes-l" class="quote-icon text-primary"></iconify-icon>
                                    </div>
                                    <div class="col-md-10 p-5">
                                        <p class="testimonial-content fs-2">"@item.Comment"</p>
                                        <p class="text-black">-@item.Name</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="swiper-pagination mt-4"></div>
                </div>
            </div>
        </div>
    </div>
</section>
