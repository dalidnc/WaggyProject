@model List<Testimonial>
@{
    ViewData["Title"] = "Müşteri Yorumları";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}


<div class="container mt-5">
    <div class="header text-center mb-5">
        <h1 class="main-title">
            <i class="bi bi-chat-left-quote"></i> Müşteri Yorumları
        </h1>
    </div>

    <div class="table-wrapper">
        <table class="table table-striped table-hover">
            <thead class="table-header">
                <tr>
                    <th>#</th>
                    <th>Müşteri Adı</th>
                    <th>Yorum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td class="actions">
                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                                
                            </a>
                            <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info btn-sm">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Yeni Kategori Ekle Butonu -->
    <div class="text-center mt-4">
        <a href="/Testimonial/AddTestimonial" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Yorum Ekle
        </a>
    </div>
</div>

<!-- Stil Tanımlamaları -->
<style>
    /* Genel Sayfa Konteyneri */
    .container {
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        max-width: 90%;
        margin: 50px auto;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    /* Başlık Bölümü */
    .header {
        margin-bottom: 30px;
    }

    .main-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #343a40;
        text-transform: capitalize;
        display: inline-block;
        padding-right: 10px;
    }

        .main-title i {
            font-size: 3rem;
            color: #17a2b8;
        }

    .subtitle {
        font-size: 1.1rem;
        color: #777;
        font-weight: 400;
    }

    /* Tablo Başlık Kısmı */
    .table-header {
        background-color: #28a745;
        color: white;
        font-weight: 600;
        text-align: center;
        text-transform: uppercase;
    }

    /* Tablo Satırları */
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 15px;
        font-size: 1rem;
        border: 1px solid #ddd;
    }

    /* Satır Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    /* Buton Stili */
    .btn {
        padding: 8px 15px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn-danger {
        background-color: #dc3545;
