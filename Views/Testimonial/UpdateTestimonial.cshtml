@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<form method="post" class="p-4 border rounded bg-light">
    <input type="hidden" asp-for="TestimonialId" />

    <h5 class="mb-4 d-flex align-items-center">
        <i class="bi bi-pencil-square me-2"></i> Müşteri Yorumlarını Güncelle
    </h5>

    <div class="mb-3">
        <label for="Name" class="form-label">
            <i class="bi bi-tag"></i> İsim
        </label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Kategori adını girin" })
    </div>
    <div class="mb-3">
        <label for="Comment" class="form-label">
            <i class="bi bi-tag"></i> Yorum
        </label>
        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control", placeholder = "Kategori adını girin" })
    </div>

    <div class="d-flex justify-content-end gap-2">
        <a href="/Testimonial/Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> İptal
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check2-circle"></i> Kaydet
        </button>
    </div>
</form>


