@model Testimonial

@{
    ViewData["Title"] = "Müşteri Yorumu Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Yorum Ekle</h3>
<form method="post">
    <label>İsim</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Yorum</label>
    <input type="text" asp-for="Comment" class="form-control" />
    <br />
    <button class="btn btn-dark">Ekle</button>
</form>

