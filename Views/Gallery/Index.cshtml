@model List<Gallery>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<!-- Sayfa İçeriği -->
<div class="container">
    <div class="header text-center mb-4">
        <h1 class="main-title">
            <i class="bi bi-images"></i> Galeri Yönetimi
        </h1>
        <p class="subtitle">Fotoğraf ve medya içeriklerinizi kolayca yönetin.</p>
    </div>

    <div class="table-wrapper">
        <table class="table table-bordered">
            <thead class="table-header">
                <tr>
                    <th>#</th>
                    <th>Resim</th>
                    <th>Dosya Yolu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td><img src="@item.ImageUrl" class="img-thumbnail" width="100" asp-append-version="true"></td>
                        <td>@item.ImageUrl</td>

                        <td>
                            <a href="/Gallery/DeletGallery/@item.Id" class="btn btn-delete">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a href="/Gallery/EditGallery/@item.Id" class="btn btn-update">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Yeni Fotoğraf Ekleme Butonu -->
    <div class="d-flex justify-content-center mt-4">
        <a href="/Gallery/AddGallery" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Fotoğraf Ekle
        </a>
    </div>
</div>

<!-- Stil Tanımlamaları -->
<style>
    .container {
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        max-width: 85%;
        margin: 50px auto;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .header {
        margin-bottom: 30px;
    }

    .main-title {
        font-size: 2.8rem;
        font-weight: 600;
        color: #333;
    }

    .main-title i {
        font-size: 3rem;
        color: #28a745;
    }

    .subtitle {
        font-size: 1.1rem;
        color: #777;
        font-weight: 400;
    }

    .table-header {
        background-color: #28a745;
        color: white;
        font-weight: 500;
        text-align: center;
        text-transform: uppercase;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 15px;
        font-size: 1rem;
        border: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
        cursor: pointer;
    }

    .btn {
        padding: 8px 15px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-2px);
    }

    .btn-update {
        background-color: #17a2b8;
        color: white;
    }

    .btn-update:hover {
        background-color: #138496;
        transform: translateY(-2px);
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .d-flex {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
</style>

<!-- Bootstrap simgelerinin çalışması için -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>


