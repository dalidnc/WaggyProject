@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home | Mantis Bootstrap 5 Admin Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Mantis is made using Bootstrap 5 design framework.">
    <meta name="keywords" content="Mantis, Dashboard, Bootstrap 5, Admin Template">
    <meta name="author" content="CodedThemes">

    <link rel="icon" href="~/Mantis-Bootstrap-1.0.0/assets/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" id="main-font-link">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/fonts/tabler-icons.min.css">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/fonts/feather.css">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/fonts/fontawesome.css">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/fonts/material.css">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/css/style.css" id="main-style-link">
    <link rel="stylesheet" href="~/Mantis-Bootstrap-1.0.0/assets/css/style-preset.css">

    <style>
        .hover-shadow:hover {
            box-shadow: 0 0 0.95rem rgba(80, 80, 80, 0.1) !important;
            transform: translateY(-2px);
        }
    </style>
</head>

<body data-pc-preset="preset-1" data-pc-direction="ltr" data-pc-theme="light">
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>

    <div class="pc-container">
        <div class="pc-content bg-light rounded-4 p-4">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Home</h5>
                            </div>
                            <ul class="breadcrumb bg-white px-3 py-2 rounded shadow-sm mb-4">
                                <li class="breadcrumb-item"><a href="~/Mantis-Bootstrap-1.0.0/dashboard/index.html">Home</a></li>
                                <li class="breadcrumb-item"><a href="javascript: void(0)">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Home</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <!-- En yüksek fiyatlı ürün -->
                <div class="col-md-6 col-xl-3">
                    <div class="card shadow-sm hover-shadow border-0" style="transition: all 0.3s ease;">
                        <div class="card-body">
                            <h6 class="mb-2 f-w-600 text-dark text-uppercase">En yüksek fiyatlı ürün:</h6>
                            <h4 class="mb-1 text-dark">
                                @ViewBag.data1
                                <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary border border-primary px-3 py-1 ms-2" style="font-size: 0.9rem;">
                                    @ViewBag.dataPrice ₺
                                </span>
                            </h4>
                            <p class="mb-0 text-muted text-sm">
                                Kategori: <span class="text-primary">@ViewBag.data1Category</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- En düşük fiyatlı ürün -->
                <div class="col-md-6 col-xl-3">
                    <div class="card shadow-sm hover-shadow border-0" style="transition: all 0.3s ease;">
                        <div class="card-body">
                            <h6 class="mb-2 f-w-600 text-dark text-uppercase">En düşük fiyatlı ürün:</h6>
                            <h4 class="mb-1 text-dark">
                                @ViewBag.cheapestProduct
                                <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger px-3 py-1 ms-2" style="font-size: 0.9rem;">
                                    @ViewBag.cheapestProductPrice ₺
                                </span>
                            </h4>
                            <p class="mb-0 text-muted text-sm">
                                Kategori: <span class="text-danger">@ViewBag.cheapestProductCategory</span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Toplam Ürün Sayısı -->
                <div class="col-md-6 col-xl-3">
                    <div class="card shadow-sm hover-shadow border-0 text-center" style="transition: all 0.3s ease;">
                        <div class="card-body">
                            <h6 class="mb-2 f-w-600 text-dark text-uppercase">Toplam Ürün Sayısı</h6>
                            <h1 class="mb-0 display-5 text-primary">@ViewBag.ProductCount</h1>
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("DashboardComponent")
            </div>
        </div>
    </div>

    <footer class="pc-footer">
        <div class="footer-wrapper container-fluid">
            <div class="row">
                <div class="col-sm my-1">
                    <p class="m-0">
                        Mantis &#9829; crafted by Team
                        <a href="https://themeforest.net/user/codedthemes" target="_blank">Codedthemes</a>
                        Distributed by <a href="https://themewagon.com/">ThemeWagon</a>.
                    </p>
                </div>
                <div class="col-auto my-1">
                    <ul class="list-inline footer-link mb-0">
                        <li class="list-inline-item"><a href="~/Mantis-Bootstrap-1.0.0/index.html">Home</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/plugins/apexcharts.min.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/pages/dashboard-default.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/plugins/popper.min.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/plugins/simplebar.min.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/fonts/custom-font.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/pcoded.js"></script>
    <script src="~/Mantis-Bootstrap-1.0.0/assets/js/plugins/feather.min.js"></script>

    <script>layout_change('light');</script>
    <script>change_box_container('false');</script>
    <script>layout_rtl_change('false');</script>
    <script>preset_change("preset-1");</script>
    <script>font_change("Public-Sans");</script>

</body>

</html>