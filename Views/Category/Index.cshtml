@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<!-- Sayfa İçeriği -->
<div class="container">
    <div class="header text-center mb-4">
        <h1 class="main-title">
            <i class="bi bi-collection-fill"></i> Kategori Yönetimi
        </h1>
        <p class="subtitle">Kolayca kategorilerinizi yönetin.</p>
    </div>

    <div class="table-wrapper">
        <table class="table table-bordered">
            <thead class="table-header">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-delete">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-update">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Yeni Kategori Ekleme Butonu -->
    <div class="d-flex justify-content-center mt-4">
        <a href="/Category/AddCategory" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Kategori Oluştur
        </a>
    </div>
</div>

<!-- Stil Tanımlamaları -->
<style>
    /* Genel Sayfa Konteyneri */
    .container {
        background-color: #fff;
        border-radius: 8px;
        padding: 30px;
        max-width: 85%;
        margin: 50px auto;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    /* Başlık Bölümü */
    .header {
        margin-bottom: 30px;
    }

    .main-title {
        font-size: 2.8rem;
        font-weight: 600;
        color: #333;
        text-transform: capitalize;
        display: inline-block;
        padding-right: 10px;
    }

        .main-title i {
            font-size: 3rem;
            color: #28a745;
        }

    .subtitle {
        font-size: 1.1rem;
        color: #777;
        font-weight: 400;
    }

    /* Tablo Başlık Kısmı */
    .table-header {
        background-color: #28a745;
        color: white;
        font-weight: 500;
        text-align: center;
        text-transform: uppercase;
    }

    /* Tablo Satırları */
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 15px;
        font-size: 1rem;
        border: 1px solid #ddd;
    }

    /* Satır Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
        cursor: pointer;
    }

    /* Buton Stili */
    .btn {
        padding: 8px 15px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: 1px solid #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .btn-update {
        background-color: #17a2b8;
        color: white;
        border: 1px solid #17a2b8;
    }

        .btn-update:hover {
            background-color: #138496;
            transform: translateY(-2px);
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: 1px solid #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    /* Tablo Genişlik Ayarları */
    .table-wrapper {
        overflow-x: auto;
    }

    /* Butonlar ve Tabloyu Dengelemek için Flexbox */
    .d-flex {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }
</style>

<!-- Bootstrap simgelerinin çalışması için -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"></script>
