
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}



@await Component.InvokeAsync("DefaultBannerComponent")

@await Component.InvokeAsync("DefaultCategories")

@await Component.InvokeAsync("DefaultClothesComponent")

@await Component.InvokeAsync("DefaultProductComponent")

@await Component.InvokeAsync("DefaultTestimonialComponent")
